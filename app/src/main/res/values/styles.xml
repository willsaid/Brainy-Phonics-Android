<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textViewStyle">@style/ComicSanTextViewStyle</item>
    </style>

    <style name="ComicSanTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/comic_sans</item>
    </style>

    <style name="TextViewRegular" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewBold" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TextViewAnswer" parent="TextViewBold">
        <item name="android:textSize">@dimen/sp_36</item>
        <item name="android:background">@drawable/shape_answer_sight_word</item>
    </style>

    <style name="TextViewSentence" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:textSize">@dimen/sp_25</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="Theme.Transparent" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
</resources>
